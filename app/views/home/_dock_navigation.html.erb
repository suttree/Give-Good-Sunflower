<% if @articles.current_page > 1 %>
  <a href='/<%= controller.action_name %>/<%= @articles.current_page - 1 %>' id='prev'>« Previous</a>
<% end %>
<a href='http://twitter.com/<%= article.twitter_screen_name %>/statuses/<%= article.tweet_id %>'>via @<%= article.twitter_screen_name %></a>
<% if @articles.current_page < @articles.total_pages %>
  <a href='/<%= controller.action_name %>/<%= @articles.current_page + 1 %>' id='next'>Next »</a>
<% end %>
